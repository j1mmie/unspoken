{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "sourceRoot": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "declaration": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "tests/**/*",
    "tests/utils",
    "tests/utils/**/*",
  ]
}
